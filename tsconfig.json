{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": "dist",
    "declaration": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "tests"],
  "exclude": [".prettierrc.js", "node_modules"]
}
